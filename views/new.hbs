<form action="/record/new" method="POST" >
<div class="container mt-5">
  <div class="col-md-6 m-auto" >
     <div class="row col-md-6 m-auto mb-2" >
    <h4 class="text-items-center">請輸入你的支出</h4>
    <div class="col-sm-9">
    </div>
  </div>
        <div class="form-group">
          <label for="name">名稱<span style="color:red;">*</span></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="花費名稱">
        </div>
        <div class="form-group">
          <label for="date">日期<span style="color:red;">*</span></label>
          <input type="date" id="date" name="date" class="form-control">
        </div>
        <div class="form-group">
          <label for="category">類別<span style="color:red;">*</span></label>
          <select type="select"  class="form-control" name="category" id="category">
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
          </select>
        </div>
        <div class="form-group">
          <label for="amount">金額<span style="color:red;">*</span></label>
          <input type="number" id="amount" name="amount" class="form-control" placeholder="花費金額">
        </div>
        <small class="col-sm-3"><span style="color:red;" >*</span>為必填欄位</small>
        <button type="submit" class="btn btn-primary btn-block mt-3">新增支出</button>
  </div>
</div>
</form>